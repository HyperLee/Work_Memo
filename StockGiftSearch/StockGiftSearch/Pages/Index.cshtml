@page
@model IndexModel
@{
    ViewData["Title"] = "股東會紀念品查詢";
}

<h1>股東會紀念品查詢</h1>
<form method="get" class="mb-3">
    <div class="row g-2 align-items-center">
        <div class="col-auto">
            <input type="text" name="Query" value="@Model.Query" class="form-control" placeholder="輸入代號/名稱/紀念品名稱查詢" />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">查詢</button>
        </div>
        <div class="col-auto">
            <a asp-page="Index" asp-route-Sort="@(Model.Sort == "desc" ? null : "desc")" class="btn btn-secondary">
                依代號排序 @(Model.Sort == "desc" ? "↓" : "↑")
            </a>
        </div>
    </div>
</form>

@if (Model.StockGifts.Count == 0)
{
    <div class="alert alert-info">查無資料，請重新查詢或稍後再試。</div>
}
else
{
    <table class="table table-bordered table-hover table-sm">
        <thead>
            <tr>
                <th>代號</th>
                <th>名稱</th>
                <th>股東會日期</th>
                <th>紀念品名稱</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.StockGifts)
        {
            <tr>
                <td>@item.Code</td>
                <td>@item.Name</td>
                <td>@item.MeetingDate</td>
                <td>@item.GiftName</td>
            </tr>
        }
        </tbody>
    </table>
}
