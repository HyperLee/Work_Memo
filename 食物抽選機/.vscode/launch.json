{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "coreclr",
      "request": "launch",
      "name": "Launch ASP.NET Core (食物抽選機)",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/食物抽選機/bin/Debug/net8.0/食物抽選機.dll",
      "args": [],
      "cwd": "${workspaceFolder}/食物抽選機",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "launchBrowser": {
        "enabled": true,
        "args": "http://localhost:5242",
        "windows": {
          "command": "cmd.exe",
          "args": "/C start ${auto-detected-url}"
        },
        "osx": {
          "command": "open"
        },
        "linux": {
          "command": "xdg-open"
        }
      }
    }
  ]
}
