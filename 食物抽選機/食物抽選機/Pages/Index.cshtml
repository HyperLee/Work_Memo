@page
@model IndexModel
@{
    ViewData["Title"] = "食物抽選機";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <h1 class="card-title mb-4">食物抽選機</h1>
                    <form method="post">
                        <button type="submit" class="btn btn-primary btn-lg mb-3">開始抽選</button>
                    </form>
                    @if (Model.Result != null)
                    {
                        <div class="alert alert-success mt-3" role="alert">
                            <strong>抽選結果：</strong><br />
                            <span>店家名稱：@Model.Result.Name</span><br />
                            <span>地址：@Model.Result.Address</span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
