@page
@model 飲料抽選器.Pages.IndexModel
@{
    ViewData["Title"] = "飲料抽選機";
}
<div class="container mt-5">
    <h1 class="text-center">飲料抽選機</h1>
    <form method="post" class="text-center">
        <button type="submit" class="btn btn-primary">抽選</button>
    </form>
    @if (Model.Result != null)
    {
        <div class="alert alert-success mt-4" role="alert">
            抽中的飲料店家是：<strong>@Model.Result</strong>
        </div>
    }
</div>
